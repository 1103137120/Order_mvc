                //{ field: "ShipName", title: "出貨說明" },
                { command: [{ name: "edit", text: "編輯" }, { name: "destroy", text: "刪除" }], title: " ", width: "200px" },

            ],
            sortable: true,
            pageable: true,
            filterable: true,
            width: '800',
            editable: {
                mode: "popup",
                //template: $("#popup_editor").html()
